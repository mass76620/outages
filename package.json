{
  "name": "krakenflex-code",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "start": "node ./bin/post-outages/handler.js",
    "dev": "ts-node ./src/post-outages/handler.ts",
    "test": "jest -i",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.25.7",
    "@types/jest": "^29.5.13",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@types/node": "^22.7.5",
    "fetch": "^1.1.0",
    "pre-commit": "^1.2.2",
    "retry": "^0.13.1",
    "ts-retry": "^5.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/../src/$1"
    }
  },
  "pre-commit": [
    "format",
    "typecheck"
  ]
}
